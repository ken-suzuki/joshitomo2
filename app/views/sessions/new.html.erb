<% content_for :cover do %>
  <section class="module bg-dark-30 about-page-header" data-background="assets/images/about_bg.jpg">
    <div class="container">
      <div class="row">
        <div class="col-sm-6 col-sm-offset-3">
          <h1 class="module-title font-alt mb-0">Forms</h1>
        </div>
      </div>
    </div>
  </section>
<% end %>

<section class="module">
  <div class="container">
    <div class="row">
      <div class="col-sm-8 col-sm-offset-2">
        <h4 class="font-alt mb-0">ログイン</h4>
        <hr class="divider-w mt-10 mb-20">
          <%= form_for(:session, url: login_path) do |f| %>
            <div class="form-group">
              <%= f.label :email, 'メールアドレス', class: 'sr-only' %>
              <%= f.email_field :email, class: 'form-control', placeholder: 'メールアドレス' %>
            </div>
  
            <div class="form-group">
              <%= f.label :password, 'パスワード', class: 'sr-only' %>
              <%= f.password_field :password, class: 'form-control', placeholder: 'パスワード' %>
            </div>
  
            <%= f.submit 'ログイン', class: 'btn btn-round btn-g' %>
          <% end %>
      </div>
    </div>
  </div>
</section>