<section class="module">
  <div class="container">
    <div class="row">
      <div class="col-sm-8 col-sm-offset-2">
        
        <%= render 'messages/messages', messages: @messages %>
          
        <div class="comment-form">
          <h4 class="comment-form-title font-alt">メッセージを投稿する</h4>
          <%= form_for(@message, remote: true) do |f| %>
            <div class="form-group">
              <%= f.label :content, 'メッセージ', class: 'sr-only' %>
              <%= f.text_area :content, class: 'form-control', placeholder: 'メッセージを書く', :rows => "4" %>
            </div>
            <%#= <div class="form-group"> %>
              <%#= f.label :photo, '画像', class: 'sr-only' %>
              <%#= f.file_field :photo, id: :comment_photo %>
              <%#= f.hidden_field :photo_cache %>
            <%#= </div> %>
            <%= f.hidden_field :room_id, :value => @room.id %>
            <%= f.submit 'メッセージを投稿する', class: 'btn btn-round btn-d' %>
          <% end %>
        </div>
        
      </div>
    </div>
  </div>
</section>