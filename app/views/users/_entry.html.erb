<% if entries.any? %>
  <% entries.each do |entry| %>
    <div class="tab-pane" id="reviews">
      <div class="comments reviews">
        <div class="comment clearfix">
          <div class="comment-avatar">
            <%=  link_to image_tag(@user.image, size: 100), room_path(entry.room) %>
          </div>
          <div class="comment-content clearfix">
            <div class="comment-author font-alt">
              <%= link_to entry.room.id, room_path(entry.room) %>
            </div>
            <div class="comment-author font-alt">
              <%#= link_to @user.message.content, room_path(user.room) %>
            </div>
            <div class="comment-meta font-alt">
              <span><i class="fa fa-star star"></i></span><span><i class="fa fa-star star"></i></span><span><i class="fa fa-star star"></i></span><span><i class="fa fa-star star"></i></span><span><i class="fa fa-star star-off"></i></span>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  <%#= paginate @followings %>
<% else %>
  <p class="text-center" style="margin-top:30px;" >メッセージはありません</p>
<% end %>